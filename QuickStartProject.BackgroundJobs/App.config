<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <connectionStrings>
    <add name="DefaultConnection" providerName="System.Data.SqlClient" connectionString="Data Source=.\SQLEXPRESS;Initial Catalog=LogfoxDev;Integrated Security=SSPI;" />
  </connectionStrings>
  <appSettings>
    <!-- run every minute (for testing) -->
    <add key="QuickStartProject.ClearlogsJobSchedule" value="0 0/1 * * * ?" />
    <!-- run every minute (for testing) -->
    <add key="QuickStartProject.EmailSendingJobSchedule" value="0 0/1 * * * ?" />
    <!-- Override this path if required -->
    <add key="QuickStartProject.EmailTemplatesPath" value="" />
  </appSettings>
  <log4net debug="false">
    <appender name="LogFileAppender" type="log4net.Appender.FileAppender,log4net">
      <param name="File" value="Logs\QuickStartProject.log" />
      <param name="AppendToFile" value="true" />
      <layout type="log4net.Layout.PatternLayout,log4net">
        <conversionPattern value="%date %level %logger - %message%newline" />
      </layout>
    </appender>
    <appender name="NHibernateAppender" type="log4net.Appender.RollingFileAppender">
      <param name="File" value="Logs\QuickStartProject.log" />
      <param name="AppendToFile" value="true" />
      <maxSizeRollBackups value="2" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %level %logger - %message%newline" />
      </layout>
    </appender>
    <root>
      <priority value="INFO" />
      <appender-ref ref="LogFileAppender" />
    </root>
    <logger name="NHibernate">
      <level value="ERROR" />
      <appender-ref ref="NHibernateAppender" />
    </logger>
  </log4net>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="RazorEngine" publicKeyToken="9ee697374c7e744a" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-3.0.8.0" newVersion="3.0.8.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>