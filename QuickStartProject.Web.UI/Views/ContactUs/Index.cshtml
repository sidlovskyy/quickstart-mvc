@model Logfox.Web.UI.Models.ContactUs.ContactUsViewModel

@{
    ViewBag.Title = "Contact Us";
    ViewBag.MenuItem = "contact";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <legend>Contact Us</legend>
    
    <div class="control-group">    
        @Html.LabelFor(model => model.SenderName, new {@class="control-label"})
        <div class="controls">
            @Html.EditorFor(model => model.SenderName)
            @Html.ValidationMessageFor(model => model.SenderName, null, new { @class = "help-inline" })
        </div>
    </div>
        
    <div class="control-group">    
        @Html.LabelFor(model => model.SenderEmail, new {@class="control-label"})
        <div class="controls">
            @Html.EditorFor(model => model.SenderEmail)
            @Html.ValidationMessageFor(model => model.SenderEmail, null, new { @class = "help-inline" })
        </div>
    </div>
        
    <div class="control-group">    
        @Html.LabelFor(model => model.Subject, new {@class="control-label"})
        <div class="controls">
            @Html.EditorFor(model => model.Subject)
            @Html.ValidationMessageFor(model => model.Subject, null, new { @class = "help-inline" })
        </div>
    </div>
        
    <div class="control-group">    
        @Html.LabelFor(model => model.Message, new {@class="control-label"})
        <div class="controls">
            @Html.TextAreaFor(model => model.Message, new { rows = 5, @class = "input-xxlarge" })
            @Html.ValidationMessageFor(model => model.Message, null, new { @class = "help-inline" })
        </div>
    </div>

    <div class="form-actions">
        <input type="submit" value="Send" class="btn btn-primary btn-large btn-custom" />
        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-large btn-secondary" })
    </div>    
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}